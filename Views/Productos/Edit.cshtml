@model OpticaSanfrancisco.Models.Productos

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Producto</h1>


<hr />
<div class="row">
    <div class="col-md-4">
         <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Familia" class="control-label"></label>
                <select asp-for="Familia" class="form-control" >
                     <option value="Montura">Montura</option>
                </select>
                <span asp-validation-for="Familia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Linea" class="control-label"></label>
                <select asp-for="Linea" class="form-control" >
                     <option value="Lentes Oftálmolicos">Lentes Oftálmolicos</option>
                     <option value="Lentes de Sol">Lentes de Sol</option>
                     <option value="Lentes Contacto">Lentes Contacto</option>
                </select>
                <span asp-validation-for="Linea" class="text-danger"></span>
            </div>
          

            <div class="form-group">
                <label asp-for="Diseño" class="control-label"></label>
                <select asp-for="Diseño" class="form-control" >
                     <option value="Adulto">Adulto</option>
                     <option value="Niño">Niño</option>
                </select>
                <span asp-validation-for="Diseño" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <select asp-for="Marca" class="form-control" >
                    <option value="OAKLEY">OAKLEY</option>
                    <option value="CARDUCCI">CARDUCCI</option>
                    <option value="VOGUE">VOGUE</option>
                    <option value="VOCACIO">VOCACIO</option>
                    <option value="ANGELINA">ANGELINA</option>
             
          
                 
                </select>
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material" class="control-label"></label>
                 <select asp-for="Material" class="form-control" >
                     <option value="Acetato">Acetato</option>
                     <option value="Acetato-Metal">Acetato-Metal</option>
                     <option value="Policarbonato">Policarbonato</option>
                     <option value="Metal">Metal</option>
                </select>
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>
         
          
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"> S/. Precio</label>
                <input asp-for="Precio" class="form-control" />
               <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input asp-for="Imagen" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" >
                     <option value="A">A</option>
                     <option value="I">I</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>                
            <div class="form-group">
                     <input type="submit" value="Guardar" class="btn btn-dark" style="width: 40%;" />
               
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
