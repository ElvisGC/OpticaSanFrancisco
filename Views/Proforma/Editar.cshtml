@model Proforma

<h1>Editar Carrito</h1>

<div class="row" >
  <div class="col-md-3">
        <form action="" method="post">
            <input type="hidden" asp-for="ID" />
            
            <div class="form-group">
                <label asp-for="Quantity">Cantidad</label>
                <input asp-for="Quantity" type="text" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="Price">S/. Precio</label>
                <input asp-for="Price"   type="text" class="form-control" disabled> 
            </div>
              
            
            <button class="btn btn-danger">Aceptar</button>
        
        </form>

    </div>
</div>
